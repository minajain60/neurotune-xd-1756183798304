<mvc:View controllerName="converted.transactionsoverviewview.controller.TransactionsOverviewView"
          xmlns:core="sap.ui.core"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:layout="sap.ui.layout"
          xmlns="sap.m"
          xmlns:f="sap.f"
          height="100%"
          xmlns:cust="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
          xmlns:commons="sap.ui.commons">
    <f:DynamicPage busy="{viewSettings>/busy}" busyIndicatorDelay="200" fitContent="false" class="tjcSDDMTB">
        <f:title>
            <f:DynamicPageTitle busyIndicatorDelay="200">
                <f:breadcrumbs>
                    <Breadcrumbs/>
                </f:breadcrumbs>
                <f:heading>
                    <Title text="Transactions overview" level="H5"/>
                </f:heading>
                <f:actions>
                    <Button id="createObjBtn" press="onCreateObject" visible="{=${AccPrev>/accessLevel} === 2}"
                            type="Transparent" icon="sap-icon://add" tooltip="Create"/>
                    <Button press="onRefresh" type="Transparent" icon="sap-icon://refresh" tooltip="Refresh"/>
                </f:actions>
                <f:expandedContent/>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <f:content>
                    <HBox busyIndicatorDelay="200" busy="{viewSettings>/titleBusy}" justifyContent="SpaceAround"
                          width="100%">
                        <VBox width="50%">
                            <Label width="100%" text="Application Area"/>
                            <ComboBox id="idAppComboBox" width="95%" showSecondaryValues="true"
                                      filterSecondaryValues="true" selectionChange="onAppSelect"
                                      placeholder="All Application Areas"
                                      items="{ path: 'AppAreas>/applicationAreas', sorters: [{ path: 'Description' }] }">
                                <core:ListItem key="{AppAreas>key}" text="{AppAreas>value}" additionalText="{AppAreas>key}"/>
                            </ComboBox>
                        </VBox>
                        <VBox width="30%">
                            <Label text="Search"/>
                            <SearchField id="objectSearchField" liveChange="onSearch" width="95%"
                                         cust:list="idMasterObjects,idTransObjects,idCustTables"
                                         enableSuggestions="false"/>
                        </VBox>
                        <VBox width="20%">
                            <Label text="Data Language"/>
                            <Select id="idDataLangSelect" showSecondaryValues="true"
                                    items="{ path: 'UILang>/dataLanguages', sorter: [{ path: 'value' }] }"
                                    change="onChangeDataLang" width="95%">
                                <core:ListItem key="{UILang>key}" additionalText="{UILang>key}" text="{UILang>value}"/>
                            </Select>
                        </VBox>
                    </HBox>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <App>
                <layout:ResponsiveSplitter busy="{viewSettings>/splitterBusy}" busyIndicatorDelay="250"
                                           defaultPane="default">
                    <layout:PaneContainer>
                        <layout:SplitPane>
                            <Page title="Master Data" enableScrolling="false">
                                <layoutData>
                                    <layout:SplitterLayoutData size="33%" minSize="250px"/>
                                </layoutData>
                                <customHeader>
                                    <Toolbar style="Clear" design="Transparent">
                                        <Title level="H5" text="Master Data"/>
                                    </Toolbar>
                                </customHeader>
                                <content>
                                    <ScrollContainer height="100%" vertical="true" horizontal="false">
                                        <List delete="removeObj" growing="true" growingScrollToLoad="true"
                                              id="idMasterObjects"
                                              items="{ path: 'MasterDataObjects>/masterData', sorters: [{ path: 'name' }] }">
                                            <items>
                                                <StandardListItem type="Active" press="selectObject"
                                                                  description="{MasterDataObjects>description}"
                                                                  title="{MasterDataObjects>name}" iconDensityAware="false"
                                                                  iconInset="false"/>
                                            </items>
                                        </List>
                                    </ScrollContainer>
                                </content>
                            </Page>
                        </layout:SplitPane>
                        <layout:SplitPane>
                            <Page title="Transactional Data" enableScrolling="false">
                                <layoutData>
                                    <layout:SplitterLayoutData size="33%" minSize="250px"/>
                                </layoutData>
                                <customHeader>
                                    <Toolbar style="Clear" design="Transparent">
                                        <Title level="H5" text="Transactional Data"/>
                                    </Toolbar>
                                </customHeader>
                                <content>
                                    <ScrollContainer height="100%" vertical="true" horizontal="false">
                                        <List delete="removeObj" growing="true" growingScrollToLoad="true"
                                              id="idTransObjects"
                                              items="{ path: 'TransDataObjects>/transactionalData', sorters: [{ path: 'name' }] }">
                                            <items>
                                                <StandardListItem press="selectObject"
                                                                  description="{TransDataObjects>description}" type="Active"
                                                                  busyIndicatorDelay="100" title="{TransDataObjects>name}"
                                                                  iconDensityAware="false" iconInset="false"/>
                                            </items>
                                        </List>
                                    </ScrollContainer>
                                </content>
                            </Page>
                        </layout:SplitPane>
                        <layout:SplitPane>
                            <Page title="Customizing Tables" enableScrolling="false">
                                <layoutData>
                                    <layout:SplitterLayoutData size="30%" minSize="250px"/>
                                </layoutData>
                                <customHeader>
                                    <Toolbar style="Clear" design="Transparent">
                                        <Title level="H5" text="Customizing Tables"/>
                                    </Toolbar>
                                </customHeader>
                                <content>
                                    <ScrollContainer height="100%" vertical="true" horizontal="false">
                                        <List delete="removeCustTab" growing="true" growingScrollToLoad="true"
                                              id="idCustTables"
                                              items="{ path: 'CustTables>/customizingTables', sorters: [{ path: 'name' }] }">
                                            <items>
                                                <StandardListItem type="Active" title="{CustTables>name}"
                                                                  press="selectCustTable"
                                                                  description="{CustTables>description}" iconDensityAware="false"
                                                                  iconInset="false"/>
                                            </items>
                                        </List>
                                    </ScrollContainer>
                                </content>
                            </Page>
                        </layout:SplitPane>
                    </layout:PaneContainer>
                </layout:ResponsiveSplitter>
            </App>
        </f:content>
    </f:DynamicPage>
</mvc:View>